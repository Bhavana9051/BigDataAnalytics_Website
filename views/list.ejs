<head>
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
   <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
   <style>
     /* Add custom styles here */
   </style>
 </head>
 
 <body class="bg-info">
   <div class="container">
     <div class="row">
       <div class="col-md-8 offset-md-2" style="background-color: #fff; margin-top: 25px; padding: 20px;">
         <h3>
           <a class="btn btn-secondary" href="/addOrEdit"><i class="fa fa-plus"></i> Create New</a>
           My Publication List
         </h3>
         <form class="mb-3" action="/list" method="GET">
           <div class="input-group">
             <input type="text" class="form-control" name="email" placeholder="Enter Email" aria-label="Enter Email">
             <div class="input-group-append">
               <button class="btn btn-primary" type="submit">Search</button>
             </div>
           </div>
         </form>
         <div class="table-responsive">
           <table class="table table-striped">
             <thead>
               <tr>
                 <th>User Name</th>
                 <th>Email</th>
                 <th>Topic</th>
                 <th>Keywords</th>
                 <th>URL</th>
                 <th></th>
               </tr>
             </thead>
             <tbody>
               <% list.forEach(function(publication) { %>
               <tr>
                 <td><%= publication.username %></td>
                 <td><%= publication.email %></td>
                 <td><%= publication.topic %></td>
                 <td><%= publication.keywords %></td>
                 <td><a href="<%= publication.url %>"><%= publication.url %></a></td>
                 <td>
                   <a href="/<%= publication._id %>"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                   <a href="/delete/<%= publication._id %>" onclick="return confirm('Are you sure to delete this Paper?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
                 </td>
               </tr>
               <% }); %>
             </tbody>
           </table>
         </div>
       </div>
     </div>
   </div>
 </body>
 